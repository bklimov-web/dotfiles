  //   {
  //     "before": ["k", "j"],
  //     "after": ["<Esc>"]
  //   }
  // ],
  "vim.leader": "<Space>",
  "vim.foldfix": true,
  "vim.hlsearch": true,
  "vim.useSystemClipboard": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(230, 97, 89, 0.7)",
  "vim.highlightedyank.textColor": "white",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "leader",
        "i"
      ],
      "commands": [
        "extension.toggleBool"
      ]
    },
    {
      "before": [
        "leader",
        "l",
        "g"
      ],
      "commands": [
        "lazygit.openLazygit"
      ]
    },
    // NAVIGATION
    // switch b/w buffers
    {
      "before": [
        "<S-h>"
      ],
      "commands": [
        ":bprevious"
      ]
    },
    {
      "before": [
        "<S-l>"
      ],
      "commands": [
        ":bnext"
      ]
    },
    // split
